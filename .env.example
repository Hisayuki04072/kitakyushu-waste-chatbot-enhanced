# 本番環境用環境変数設定ファイル
# このファイルをコピーして .env として使用してください

# LLMモデル設定
LLM_MODEL=hf.co/mmnga/Llama-3.1-Swallow-8B-Instruct-v0.5-gguf:Q4_K_M

# Ollama設定
OLLAMA_HOST=http://ollama:11434

# バックエンドURL（フロントエンド用）
BACKEND_URL=http://backend:8000

# ChromaDB設定（テレメトリ無効化）
CHROMA_TELEMETRY=False
ANONYMIZED_TELEMETRY=False

# ログレベル
LOG_LEVEL=INFO

# セキュリティ設定（本番環境では変更）
SECRET_KEY=your-secret-key-change-this-in-production

# データベース設定（将来の拡張用）
# DATABASE_URL=postgresql://user:password@localhost:5432/kitakyushu_chatbot

# 外部API設定（将来の拡張用）
# KITAKYUSHU_API_KEY=your-api-key
